<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_zero_margin"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:background="@color/bg_white"
    tools:context="jp.co.webshark.on2.inviteFriendsActivity">


<!-- === ヘッダ部 ============================================================================== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header_in"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/linkTextView"
                android:clickable="true"
                android:onClick="inviteFriendClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/navigation_height"
                android:text="@string/head_back"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:textColor="@color/color_active_green"
                android:textSize="@dimen/navigation_text_size"/>

            <TextView
                android:id="@+id/navigationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inviteFriendsAct_naviTitle"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/navigation_text_size" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/heade_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_material_dark"
        android:layout_below="@+id/header"
        android:orientation="vertical" >
    </LinearLayout>
<!-- === ヘッダ部 ============================================================================== -->

    <RelativeLayout
        android:id="@+id/nothingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_line"
        android:layout_below="@+id/heade_line">

        <ImageView
            android:id="@+id/nothingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/invite_nothing"
            android:layout_marginTop="@dimen/activity_nothing_image_top_margin"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/nothingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inviteFriendsAct_noFriend"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/nothingImage"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heade_line"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/invite_friends_cell_height"
                android:minHeight="@dimen/invite_friends_cell_height"
                android:listSelector="@color/color_clear">
            </ListView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
