<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_zero_margin"
android:id = "@+id/mainLayout"
android:paddingRight="@dimen/activity_zero_margin"
android:paddingTop="@dimen/activity_zero_margin"
android:paddingBottom="@dimen/activity_zero_margin"
tools:context="jp.co.webshark.on2.verifyActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imageView2"
    android:src="@drawable/regist_back"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_input_text_hight"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:inputType="number"
    android:ems="10"
    android:textSize="@dimen/activity_input_text_size"
    android:id="@+id/verifyInputEditText"
    android:layout_below="@+id/imageView2"
    android:layout_alignLeft="@+id/imageView2"
    android:layout_alignStart="@+id/imageView2"
    android:autoText="false"
    android:hint="@string/verifyAct_codeInputEditText_hint"
    android:background="@drawable/simple_frame"
    android:layout_alignRight="@+id/imageView2"
    android:layout_alignEnd="@+id/imageView2"
    android:gravity="center"
    android:maxLength="8"/>

<Button
    android:onClick="onButtonClick"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_button_hight"
    android:text="@string/verifyAct_codeRegistButton_text"
    android:id="@+id/verifyRegistButton"
    android:layout_below="@+id/verifyInputEditText"
    android:layout_alignLeft="@+id/verifyInputEditText"
    android:layout_alignRight="@+id/verifyInputEditText"
    android:layout_alignStart="@+id/verifyInputEditText"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:textColor="@drawable/button_design_front"
    android:background="@drawable/button_design_back"/>

</RelativeLayout>