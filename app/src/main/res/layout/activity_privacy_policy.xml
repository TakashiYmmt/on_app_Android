<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_zero_margin"
android:paddingRight="@dimen/activity_zero_margin"
android:paddingTop="@dimen/activity_zero_margin"
android:paddingBottom="@dimen/activity_zero_margin"
tools:context="jp.co.webshark.on2.privacyPolicyActivity">

<TextView
    android:background="@color/background_floating_material_light"

    android:layout_width="wrap_content"
    android:layout_height="@dimen/navigation_hight"
    android:text="@string/telAct_eula_link_text"
    android:id="@+id/titleTextView"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:textSize="@dimen/navigation_text_size"/>

<WebView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/webView"
    android:layout_weight="0.99"
    android:layout_below="@+id/linkTextView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="@dimen/activity_zero_margin" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/navigation_hight"
    android:layout_alignBaseline="@+id/titleTextView"
    android:text="@string/close"
    android:id="@+id/linkTextView"
    android:layout_alignParentRight="true"
    android:textColorLink="@color/color_link_green"
    android:gravity="center"
    android:textSize="@dimen/navigation_text_size"/>

</RelativeLayout>