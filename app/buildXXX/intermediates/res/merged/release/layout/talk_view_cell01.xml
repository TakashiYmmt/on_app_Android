<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin_half"
    android:paddingBottom="@dimen/activity_vertical_margin_half"
    android:background="@color/bg_white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/friendImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_quarter"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginBottom="@dimen/activity_vertical_margin_quarter"
            android:src="@drawable/list_icon_user"/>

        <LinearLayout
            android:id="@+id/commentFrame"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin_half"
            android:layout_toRightOf="@+id/friendImage"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/cellMessage"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="□本日の感想"
                android:maxLines="100"
                android:maxLength="500"
                android:textSize="@dimen/friend_list_cell_comment_textsize"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/talk_balloon_9p_4"
                />
            <TextView
                android:id="@+id/cellSendTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="１時間前"
                android:textSize="@dimen/friend_list_cell_time_textsize"
                android:textColor="@color/color_text_gray"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/cellMessage"
                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                android:layout_alignBottom="@+id/cellMessage"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
