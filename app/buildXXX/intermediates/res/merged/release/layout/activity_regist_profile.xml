<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_zero_margin"
    android:id = "@+id/mainLayout"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:background="@color/bg_white"
    tools:context="jp.co.webshark.on2.registProfileActivity">

    <ImageView
        android:id="@+id/imageButton"
        android:onClick="openLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/regist_profile"
        android:layout_marginTop="@dimen/navigation_height"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/turn_button"
        android:onClick="rollImage"
        android:clickable="true"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="@dimen/activity_vertical_margin_half"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/turn_button"
        android:textColor="@color/color_text_gray2"
        android:drawableLeft="@drawable/profile_turn_android"
        android:paddingLeft="10dp"
        android:text="画像を回転する"/>

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registAct_guide_text"
        android:layout_below="@+id/turn_button"
        android:layout_marginTop="@dimen/activity_vertical_margin_half"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/idInputEditText"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_input_text_height"
        android:layout_above="@+id/profileRegistButton"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:ems="10"
        android:singleLine="true"
        android:textSize="@dimen/activity_input_text_size"
        android:hint="@string/registAct_nameInputEditText_hint"
        android:background="@drawable/simple_frame"
        android:gravity="center"
        android:maxLength="20"/>

    <Button
        android:id="@+id/profileRegistButton"
        android:onClick="onProfileRegistButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:text="@string/registAct_profileRegistButton_text"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/idInputEditText"
        android:layout_alignRight="@+id/idInputEditText"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_double_margin"
        android:textColor="@drawable/button_design_front"
        android:background="@drawable/button_design_back"/>

</RelativeLayout>
