<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_zero_margin"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:background="@color/bg_white"
    android:id = "@+id/mainLayout"
    tools:context="jp.co.webshark.on2.searchFriendActivity">

    <jp.co.webshark.on2.customViews.DetectableKeyboardEventLayout
        android:id="@+id/searchBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
    <!-- === ヘッダ部 ============================================================================== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_height"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header_in"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/linkTextView"
                android:clickable="true"
                android:onClick="searchFriendClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/navigation_height"
                android:text="@string/head_back"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:textSize="@dimen/navigation_text_size"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/color_active_green">
            <requestFocus/>
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/navigationTitle"
                android:clickable="true"
                android:text="@string/searchFriendAct_naviTitle"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/navigation_text_size" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/heade_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_material_dark"
        android:layout_below="@+id/header"
        android:orientation="vertical" >
    </LinearLayout>
<!-- === ヘッダ部 ============================================================================== -->

    <ScrollView
        android:id="@+id/scroll_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separate_inner3"
        android:layout_below="@+id/heade_line" >

        <LinearLayout
            android:id="@+id/mainList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idSearchEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_below="@+id/heade_line"
                android:textSize="@dimen/activity_input_text_size"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:text=""
                android:hint="@string/searchFriendAct_editHint"/>

            <jp.co.webshark.on2.customViews.HttpImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/friend_prof_image_height"
                android:layout_height="@dimen/friend_prof_image_height"
                android:src="@drawable/list_icon_user"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_below="@+id/idSearchEdit"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center">
            </jp.co.webshark.on2.customViews.HttpImageView>

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profEditAct_listName"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profEditAct_listName"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/actButton"
                android:onClick="addFriend"
                android:layout_width="@dimen/friend_prof_image_height"
                android:layout_height="@dimen/activity_button_height"
                android:text="@string/friendProfAct_deSilent"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_below="@+id/nameTextView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textColor="@drawable/button_design_front"
                android:background="@drawable/button_design_back" />

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/separate_inner3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background_material_dark"
            android:layout_above="@+id/my_id_frame"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/my_id_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_edit_cell_height"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/idTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searchFriendAct_myId"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/idTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searchFriendAct_myId"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </jp.co.webshark.on2.customViews.DetectableKeyboardEventLayout>
</RelativeLayout>
